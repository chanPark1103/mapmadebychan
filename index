    <!-- ì¹´ì¹´ì˜¤ë§µ API ë¡œë“œ (ì‚¬ìš©ì í‚¤ ì ìš©) -->
    <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=813478df5f3bb1453679d63a8f78c1f1"></script>
    <style>
        #map {
            width: 100%;
            height: 100%;
        }
        .active-filter {
            background-color: #2563eb;
            color: white;
            font-weight: bold;
        }
