<body class="bg-gray-100 font-sans">
    <div class="flex h-screen">
        <!-- ì‚¬ì´ë“œë°”: í•„í„° ë©”ë‰´ -->
        <aside class="w-64 bg-white p-6 shadow-lg flex flex-col z-10">
            <h1 class="text-2xl font-bold text-gray-800 mb-2">ìš°ë¦¬ë™ë„¤ ì•ˆì‹¬ì§€ë„</h1>
            <h2 class="text-lg font-semibold text-blue-600 mb-6">ê´€ì•…êµ¬í¸</h2>
            <nav class="space-y-3">
                <button id="filter-disabled" class="w-full text-left p-3 rounded-lg hover:bg-gray-200 transition-colors filter-btn">
                    <span class="text-lg">â™¿ ì¥ì• ì¸</span>
                </button>
                <button id="filter-elderly" class="w-full text-left p-3 rounded-lg hover:bg-gray-200 transition-colors filter-btn">
                    <span class="text-lg">ğŸ§“ ë…ê±°ë…¸ì¸</span>
                </button>
                <button id="filter-recipient" class="w-full text-left p-3 rounded-lg hover:bg-gray-200 transition-colors filter-btn">
                    <span class="text-lg">ğŸ  ê¸°ì´ˆìƒí™œìˆ˜ê¸‰ì</span>
                </button>
            </nav>
            <div class="mt-auto pt-6 border-t">
                 <p class="text-sm text-gray-600">
                    ì´ì œ ì‹¤ì œ ë°ì´í„°ë¥¼ ìˆ˜ì§‘í•˜ì—¬ ì´ ì§€ë„ë¥¼ ì±„ì›Œë‚˜ê°ˆ ì°¨ë¡€ì…ë‹ˆë‹¤.
                </p>
            </div>
        </aside>

        <!-- ë©”ì¸ ì½˜í…ì¸ : ì§€ë„ ì˜ì—­ -->
        <main class="flex-1">
            <div id="map"></div>
        </main>
    </div>

    <script>
        // --- ë°ì´í„°ë² ì´ìŠ¤ ì‹œë®¬ë ˆì´ì…˜ ---
        // ì•ìœ¼ë¡œ ìš°ë¦¬ê°€ ìˆ˜ì§‘í•  ì‹¤ì œ ë°ì´í„°ë¡œ ì´ ë¶€ë¶„ì„ ì±„ì›Œ ë„£ì„ ê²ë‹ˆë‹¤!
        // ì¢Œí‘œëŠ” ì‹¤ì œ ê´€ì•…êµ¬ ë‚´ ì„ì˜ì˜ ìœ„ì¹˜ë¡œ ì„¤ì •í–ˆìŠµë‹ˆë‹¤.
        const locations = {
            disabled: [
                { name: 'ëŠ˜í‘¸ë¥¸ ì¥ì• ì¸ ë³µì§€ê´€', lat: 37.47951, lng: 126.94125 },
                { name: 'í¬ë§ ì¬í™œ ì„¼í„°',       lat: 37.47213, lng: 126.95581 },
                { name: 'ì¥ì• ì¸ ì¼ìë¦¬ ì§€ì›ì„¼í„°', lat: 37.46880, lng: 126.93179 }
            ],
            elderly: [
                { name: 'ìƒë¡ìˆ˜ ë…¸ì¸ ë³µì§€íšŒê´€', lat: 37.48512, lng: 126.95888 },
                { name: 'íš¨ì‚¬ë‘ ê²½ë¡œë‹¹',       lat: 37.47545, lng: 126.92921 },
                { name: 'ì‹œë¦½ ë…¸ì¸ ì „ë¬¸ë³‘ì›',   lat: 37.46776, lng: 126.96003 }
            ],
            recipient: [
                { name: 'ê´€ì•…êµ¬ì²­ (ì£¼ë¯¼ì„¼í„°)',  lat: 37.47824, lng: 126.95156 },
                { name: 'í–‰ë³µ ë‚˜ëˆ” í‘¸ë“œë§ˆì¼“',    lat: 37.48111, lng: 126.92543 }
            ]
        };
        
        // ë³´í–‰ ìœ„í—˜ êµ¬ì—­(Red Zone) ë°ì´í„° (í´ë¦¬ê³¤ ì¢Œí‘œ ë°°ì—´)
        const dangerZonePath = [
            new kakao.maps.LatLng(37.4760, 126.9420),
            new kakao.maps.LatLng(37.4775, 126.9460),
            new kakao.maps.LatLng(37.4750, 126.9480),
            new kakao.maps.LatLng(37.4735, 126.9440)
        ];

        // ì „ì—­ ë³€ìˆ˜ ì„ ì–¸
        let map;
        let currentMarkers = [];
        let currentPolygon = null;
        let currentInfowindow = null;
        let activeFilter = null;

        document.addEventListener('DOMContentLoaded', function () {
            const mapContainer = document.getElementById('map');
            const mapOption = { 
                center: new kakao.maps.LatLng(37.4782, 126.9515), // ì§€ë„ì˜ ì¤‘ì‹¬ì¢Œí‘œ (ê´€ì•…êµ¬ì²­)
                level: 5 // ì§€ë„ì˜ í™•ëŒ€ ë ˆë²¨
            };
            
            map = new kakao.maps.Map(mapContainer, mapOption);

            const filterButtons = document.querySelectorAll('.filter-btn');
            filterButtons.forEach(button => {
                const filterType = button.id.replace('filter-', '');
                button.addEventListener('click', () => {
                    const btn = document.getElementById(`filter-${filterType}`);
                    if (activeFilter === filterType) {
                        clearMap();
                        btn.classList.remove('active-filter');
                        activeFilter = null;
                    } else {
                        displayData(filterType);
                        activeFilter = filterType;
                    }
                });
            });
        });
        
        function clearMap() {
            currentMarkers.forEach(marker => marker.setMap(null));
            currentMarkers = [];
            if (currentPolygon) {
                currentPolygon.setMap(null);
                currentPolygon = null;
            }
            if (currentInfowindow) {
                currentInfowindow.close();
                currentInfowindow = null;
            }
        }
        
        function displayData(filterType) {
            clearMap();
            
            document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active-filter'));
            document.getElementById(`filter-${filterType}`).classList.add('active-filter');

            locations[filterType].forEach(loc => {
                const position = new kakao.maps.LatLng(loc.lat, loc.lng);
                
                const marker = new kakao.maps.Marker({
                    map: map,
                    position: position,
                    title: loc.name
                });
                currentMarkers.push(marker);
                
                const infowindow = new kakao.maps.InfoWindow({
                    content: `<div style="padding:5px;font-size:12px;">${loc.name}</div>`,
                    removable: true
                });

                kakao.maps.event.addListener(marker, 'click', function() {
                    if (currentInfowindow) currentInfowindow.close();
                    infowindow.open(map, marker);
                    currentInfowindow = infowindow;
                });
            });

            if (filterType === 'disabled') {
                currentPolygon = new kakao.maps.Polygon({
                    path: dangerZonePath,
                    strokeWeight: 3,
                    strokeColor: '#FF0000',
                    strokeOpacity: 0.8,
                    strokeStyle: 'longdash',
                    fillColor: '#FF0000',
                    fillOpacity: 0.3
                });
                currentPolygon.setMap(map);
            }
            
            if (locations[filterType].length > 0) {
                 const firstLocation = locations[filterType][0];
                 const moveLatLon = new kakao.maps.LatLng(firstLocation.lat, firstLocation.lng);
                 map.panTo(moveLatLon);
            }
        }
    </script>
